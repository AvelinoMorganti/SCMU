<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textLocation"
                android:id="@+id/textLocation"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/textYes"
                android:id="@+id/buttonYes"
                android:layout_weight="1"
                android:layout_marginTop="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textSMSNotifications"
                android:id="@+id/textSMSNotifications"
                android:layout_weight="1" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/buttonSMSNotifications"
                android:layout_weight="1"
                 android:checked="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewHello"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/gps_msg"
                android:padding="15sp" />

            <ScrollView android:id="@+id/scroller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHello"
                android:layout_weight="0.65">

                <EditText
                    android:id="@+id/editTextPosicoes"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="none"
                    android:textSize="10sp"
                    android:gravity="top|left"
                    android:focusable="false" />

            </ScrollView>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/textBack"
                android:id="@+id/buttonBack"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
